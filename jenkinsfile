pipeline {
    agent any

    stages {
		stage('checkout git') {
            steps {
               checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'siva_cred', url: 'https://github.com/sridattaga/react-project.git']])
            }
		}
	stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Package') {
            steps {
                sh 'tar -czf react-demo-app.tar.gz build'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '*.tar.gz', fingerprint: true
            }
        }

    }
}
